#!/bin/sh

# nvmを使用している場合は初期化
if [ -s "$HOME/.nvm/nvm.sh" ]; then
  export NVM_DIR="$HOME/.nvm"
  . "$NVM_DIR/nvm.sh"
fi

# WSL2環境でWindows側のパスを除外
export PATH=$(echo "$PATH" | tr ':' '\n' | grep -v "^/mnt/c/" | tr '\n' ':' | sed 's/:$//')

# プロジェクトの node_modules 経由で直接実行
./node_modules/.bin/lint-staged
